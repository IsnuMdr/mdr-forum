{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,        
    "jest/globals": true,
    "cypress/globals": true
  },
  "extends": ["plugin:react/recommended", "google"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "jest", "cypress"],
  "rules": {
    "quotes": ["warn", "double"],
    "max-len": ["warn", { "code": 200 }],
    "linebreak-style": "off",
    "indent": ["off", 2, { "SwitchCase": 1 }],
    "operator-linebreak": "off",
    "object-curly-spacing": ["error", "always"],
    "require-jsdoc": 0,
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": "warn",
    "comma-dangle": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
